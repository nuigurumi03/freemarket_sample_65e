.regist-body  
  .regist-container
    .regist-header
      = link_to "#" do
        = image_tag "fmarket_logo_red.svg" ,alt: '' , height: '36px', width: '150px', class:'top-logo'

    .contents-sns
      .contents-sns__main
        .contents-sns__main__title
          新規会員登録
        .contents-sns__main__btn  
          .contents-sns__main__btn__link
          = link_to "#", class: "contents__btn--email" do
            = icon('far', 'envelope',class:"icon-mail")
            %span
              メールアドレスで登録する
          = link_to "https://www.facebook.com/", class: "contents__btn--facebook" do
            = icon('fab', 'facebook-square',class:"icon-fbook")
            %span
              facebookで登録する
          = link_to "#", class: "contents__btn--google" do
            = icon('fab', 'google',class:"icon-google")
            %span
              googleで登録する

    
    .regist__footer
      .regist__footer__rule
        %ul.regist__footer__rule__list
          %li.regist__footer__rule__list__first
            %a{:href => "https://www.mercari.com/jp/privacy/"} プライバシーポリシー
          %li.regist__footer__rule__list__second
            %a{:href => "https://www.mercari.com/jp/tos/"} メルカリ利用規約
          %li.regist__footer__rule__list__third
            %a{:href => "https://www.mercari.com/jp/tokutei/"} 特定商取引に関する表記
      =link_to "#" do
        =image_tag "fmarket_logo_white.svg" ,alt: '' , height: '36px', width: '150px',class:'footer-logo'
      %p
        %small © Mercari, Inc.
