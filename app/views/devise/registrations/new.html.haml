        %ol.step-bar
          %li.step.current 
            会員情報  
            .progress-status
              %hr{class: "progress-bar-li progress-bar-li-active", noshade: "noshade", size: "2", width: "100",align: "left"}/
          %li.step.current 
            電話番号認証
            .progress-status 
              %hr{class: "progress-bar-li progress-bar-li-active", noshade: "noshade", size: "2", width: "120",align: "left"}/
          %li.step.current 
            お届け先住所入力
            .progress-status 
              %hr{class: "progress-bar-li progress-bar-li-active", noshade: "noshade", size: "2", width: "123",align: "left"}/
          %li.step.current 
            お支払い住所
            .progress-status 
              %hr{class: "progress-bar-li progress-bar-li-active", noshade: "noshade", size: "2", width: "100",align: "left"}/
          %li.step.current 
            完了
            .progress-status 

